@import 'normalize'
@import 'helper'
@import 'header'
@import 'notification'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7
$red = #e51c23
$green = #8bc34a
$blue = #5677fc
$orange = #ffc107
$bg = #5eb388

*
	box-sizing border-box

html
button
input
select
textarea
	color $black

a
a:visited
	color $linkColor
	text-decoration none

a:hover
	color lighten($linkColor,10%)

body
	color $black
	font-size 1em
	line-height 1.5
	background $bg

.container
	width 100%
	padding 50px
	margin 0 auto

	&.container--outer
		max-width 960px
		padding 60px
		background-image url(../images/pattern.png)
		background-position 50%
		background-repeat no-repeat
		background-size cover

		&.hovering
			padding 50px
			border 10px solid black

	&.container--inner
		background #eaeaea
		padding 65px

		&.hovering
			padding 50px
			border 15px solid black

.boxes
.box
	list-style none
	margin 0
	padding 0

.box
	padding 5px
	float left
	width 100%
	cursor pointer

	> div
		background $white

	&:hover
		border 5px solid black
		padding 0

	&.third
		width 33.33%

	&.half
		width 50%

	&.red .header
		background $red

	&.green .header
		background $green

	&.blue .header
		background $blue

	&.last
		.header
			background $orange

		.box-action-area
			box-shadow 0 3px 7px 0 rgba(0,0,0,.3)

	&.red
	&.blue
	&.green
	&.last
		.header
			color $white

	.header
	.content
		padding 10px

	.header
		position: relative;

		.title
			margin 0
			text-transform uppercase
			font-size 1rem
			font-weight 100

		.remove
			position absolute
			right 0
			top 0
			display block
			height 100%
			text-transform uppercase
			font-size .9rem
			transition all 300ms ease-out
			font-family monospace

			&:hover
				color $linkColor
				background rgba(255, 255, 255, .2)

			.icon
				position relative
				left 50%
				top 50%
				transform translate3d(-50%, -50%, 0)
				display block
				padding 0 15px

	.list-heading
		font-size .9rem
		margin 0

.empty-message
	text-align center
	display block
	cursor pointer
	text-transform uppercase
	letter-spacing 2px
	font-weight bold
	font-size .9rem
	color $white
