.header-bar
  background #fff
  box-shadow 0 1px 5px rgba(0, 0, 0, .1)
  color $black
  padding 15px 20px
  margin-bottom 10px
  text-transform uppercase
  font-weight 300
  
  .title
  dl
  dt
  dd
    display inline-block
  
  .title
    font-weight 300
    margin 0 30px 0 0
    height 100%
    font-size 1.4rem
  
  dl
    margin 0
    font-size .9rem
  
  dd
    margin-left 10px
    margin-right 30px