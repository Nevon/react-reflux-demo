@import 'animations'

.notification
  position absolute
  top 30px
  right 30px
  max-width 300px
  width 100%
  padding 10px 20px
  background #fcfcfc
  border 1px solid #ccc
  box-shadow 0 5px 10px rgba(0,0,0,.15)
  border-radius 5px
  opacity 0
  display none
  z-index 2
  
  &.active
    display block
    animation fadeOut 5s linear forwards
  
  .title
    margin 5px 0
    font-size 1.1rem
  
  .message
    margin 0
    font-size .9rem